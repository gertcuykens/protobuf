{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "none",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "sourceMap": false,
    "outDir": "pkg",
    "removeComments": true,
    "stripInternal": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": ["node_modules"]
}
